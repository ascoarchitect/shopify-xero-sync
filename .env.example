# Shopify-Xero Sync System Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SHOPIFY CONFIGURATION
# =============================================================================
# Your Shopify store URL (without trailing slash)
SHOPIFY_SHOP_URL=https://your-store.myshopify.com

# Shopify OAuth2 credentials (from Dev Dashboard)
# Get these from https://partners.shopify.com/ > Apps > Your App > Overview
SHOPIFY_CLIENT_ID=your_client_id_here
SHOPIFY_CLIENT_SECRET=your_client_secret_here

# Shopify access token (obtained via OAuth, managed automatically)
# Run 'python auth_shopify.py' to get this
SHOPIFY_ACCESS_TOKEN=

# =============================================================================
# XERO CONFIGURATION
# =============================================================================
# Xero OAuth2 credentials
# Get these from https://developer.xero.com/app/manage
XERO_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
XERO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Xero tenant (organization) ID
# Get this by calling the /connections endpoint after OAuth
XERO_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# OAuth2 tokens (will be managed automatically after initial auth)
# These can be left empty initially - the app will guide you through auth
XERO_ACCESS_TOKEN=
XERO_REFRESH_TOKEN=

# =============================================================================
# APPLICATION SETTINGS (OPTIONAL)
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Dry run mode: true = don't actually update Xero, just log what would happen
DRY_RUN=false

# Enable email marketing for all customers during sync
# Set to true to automatically subscribe all customers to email marketing
# Useful for migrating from platforms where consent wasn't transferred
ENABLE_EMAIL_MARKETING=false

# Database file location (relative to project root)
DATABASE_PATH=data/sync.db

# Log file location (relative to project root)
LOG_FILE=logs/sync.log

# =============================================================================
# PERFORMANCE TUNING (OPTIONAL)
# =============================================================================
# Maximum retry attempts for failed API calls
MAX_RETRIES=3

# Initial delay between retries (seconds) - exponential backoff applies
RETRY_DELAY=2

# Stay this many calls under the rate limit
RATE_LIMIT_BUFFER=5

# Delay between Shopify API calls (seconds) to stay under rate limit
SHOPIFY_RATE_LIMIT_DELAY=0.5

# Delay between Xero API calls (seconds) to stay under rate limit
XERO_RATE_LIMIT_DELAY=1.0
